{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "trailing-comma": [false],
    "semicolon": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "eofline": true,
    "encoding": true
  },
  "rulesDirectory": []
}
